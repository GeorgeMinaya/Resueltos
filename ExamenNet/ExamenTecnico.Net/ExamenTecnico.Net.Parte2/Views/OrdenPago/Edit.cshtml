@model ExamenTecnico.Net.Parte2.Models.OrdenPagoSucursalModel

@{
    ViewData["Title"] = "Edición de Orden de Pago";
}

<h1>Editando</h1>

<h4>Edición de Orden de Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="Estados" class="control-label"></label>
                <select asp-for="Estados" asp-items="Html.GetEnumSelectList<OrdenPagoSucursalModel.EstadosOrden>()" class="form-control"></select>
                <span asp-validation-for="Estados" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Monto" class="form-control" disabled="disabled" />
                    <div class="input-group-append ">
                        <select asp-for="TipoPago" asp-items="Html.GetEnumSelectList<OrdenPagoSucursalModel.TiposPago>()" class="form-control" disabled="disabled"></select>
                    </div>
                </div>                
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="FechaRegistro" class="control-label"></label>
                <input asp-for="FechaRegistro" class="form-control" disabled="disabled" />
                <span asp-validation-for="FechaRegistro" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <label asp-for="NombreSucursal" class="control-label"></label>
                <input asp-for="NombreSucursal" class="form-control" disabled="disabled" />
                <span asp-validation-for="NombreSucursal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
